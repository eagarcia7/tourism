---
import Icon from '../ui/Icon.astro';
import type { IconName } from '../../types/icon-types';

interface Props {
  title: string;
  content: string;
  iconName: IconName;
  link?: {
    text: string;
    href: string;
  };
  className?: string;
}

const { title, content, iconName, link, className = '' } = Astro.props;
---

<div class={`bg-white p-6 rounded-lg shadow-sm ${className}`}>
  <div class="text-blue-600 mb-3">
    <Icon name={iconName} size="lg" />
  </div>
  <h3 class="font-bold text-lg text-gray-800 mb-2">{title}</h3>
  <p class="text-gray-600">
    {content}
  </p>
  {link && (
    <a href={link.href} class="inline-block mt-3 text-blue-600 hover:text-blue-800 font-medium">
      {link.text}
    </a>
  )}
</div>